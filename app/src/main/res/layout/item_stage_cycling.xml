<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:minWidth="120dp"
        android:id="@+id/ll_stage_item"
        android:layout_height="441dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorCBCBCB" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@color/colorA5B8D6"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/cycling_stage"
                    android:textColor="@color/color333333"
                    android:textSize="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorCBCBCB" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setup_total_cycles"

                            android:textColor="@color/color333333" />
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_cycling_cnt"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="40"
                            android:textSize="12dp"
                            android:inputType="number"
                            android:maxLength="3"
                            android:paddingTop="4dp"
                            android:background="@drawable/shape_solidffffff_strokecbcbcb"
                            android:paddingBottom="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setup_pic_step"
                            android:textColor="@color/color333333" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_pic_step"
                            android:paddingLeft="6dp"
                            android:textColor="@color/color333333"
                            android:paddingRight="6dp"
                            android:paddingTop="4dp"
                            android:text="12sp"
                            android:background="@drawable/shape_solidffffff_strokecbcbcb"
                            android:paddingBottom="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorCBCBCB" />
        <!-- <com.jz.experiment.widget.NoFlexibleHorizontalListView
             android:id="@+id/lv_inner"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>-->
       <com.jz.experiment.widget.HorizontalContainer
            android:id="@+id/horizontal_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />
       <!--<android.support.v7.widget.RecyclerView
             android:id="@+id/rv_inner"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

         </android.support.v7.widget.RecyclerView>-->


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_cycling_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_add"
       />

    <ImageView
        android:id="@+id/iv_cycling_del"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:layout_gravity="right"
        android:src="@drawable/icon_minus"
       />
</FrameLayout>