<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <com.jz.experiment.widget.DeviceStateBar
        android:id="@+id/main_device_state_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.wind.view.ControlableViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </com.wind.view.ControlableViewPager>
    <!--bottombar-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout_gravity="bottom">


        <RelativeLayout
            android:id="@+id/layout_expe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/expe_img"
                android:layout_width="@dimen/tabbar_icon_size"
                android:layout_height="@dimen/tabbar_icon_size"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/selector_main_expe_tab_icon" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/data_img"
                android:layout_width="@dimen/tabbar_icon_size"
                android:layout_height="@dimen/tabbar_icon_size"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/selector_main_data_tab_icon" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_analyze"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/analyze_img"
                android:layout_width="@dimen/tabbar_icon_size"
                android:layout_height="@dimen/tabbar_icon_size"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/selector_main_analyze_tab_icon" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

