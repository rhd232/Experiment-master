<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/color686868">

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_default_user"
        android:text="admin"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:drawablePadding="4dp"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/tv_device_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未连接"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/selector_bluetooth"
        android:drawablePadding="6dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_solidffffff_corner10"
        android:textColor="@color/selector_999999_f2bc00"
        android:visibility="invisible"/>
</RelativeLayout>