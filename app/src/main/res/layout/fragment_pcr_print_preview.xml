<?xml version="1.0" encoding="utf-8"?>
<com.jz.experiment.widget.A4PageLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_a4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <com.jz.experiment.widget.PrintTitleLayout
                android:id="@+id/layout_print_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

           <!-- <com.jz.experiment.widget.SlidingConfilctRecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp">

            </com.jz.experiment.widget.SlidingConfilctRecyclerView>-->
            <TextView
                android:id="@+id/tv_expe_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:text="@string/setup_mode_dt"
                android:textSize="@dimen/print_text_size"
                android:textColor="@color/color333333" />


            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="400dp" />

            <!--表格信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp">

                <com.wind.base.widget.NoFlexibleGridView
                    android:id="@+id/gv_a"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:numColumns="9" />

                <com.wind.base.widget.NoFlexibleGridView
                    android:id="@+id/gv_b"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:numColumns="9" />
            </LinearLayout>

            <com.jz.experiment.widget.PrintTailLayout
                android:id="@+id/layout_print_tail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp" />


            <View
                android:id="@+id/view_placeholder"
                android:layout_width="match_parent"
                android:layout_height="1800dp" />
        </LinearLayout>
    </ScrollView>


</com.jz.experiment.widget.A4PageLayout>