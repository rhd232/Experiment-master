<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:clipChildren="false">

            <RelativeLayout
                android:id="@+id/rl_mode_sel"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"


                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@color/color1F4E99" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="程序模式设置"
                        android:textColor="@color/color333333"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/icon_arrow_right"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="变温扩增"
                    android:textColor="@color/color333333" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clipChildren="false">
                <com.wind.base.widget.ScaleView
                    android:layout_width="30dp"
                    android:layout_height="@dimen/vernier_height"
                    android:layout_marginTop="136dp"
                    />
                </FrameLayout>
                <!--com.jz.experiment.widget.FixDragConflictRecyclerView-->


                <com.jz.experiment.widget.SlidingConfilctRecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </com.jz.experiment.widget.SlidingConfilctRecyclerView>
            </LinearLayout>

            <Button
                android:id="@+id/btn_build"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="buildLink"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_melt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@color/color1F4E99" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="温度区间"
                        android:textColor="@color/color333333"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_start_temp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_solidf5f5f5_corner12"
                        android:gravity="center"
                        android:paddingLeft="14dp"
                        android:paddingTop="4dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="4dp"
                        android:hint="开始温度"
                        android:textColorHint="#B2B1B6"
                        android:textColor="@color/color333333"/>

                    <View
                        android:layout_width="17dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorF5F5F5" />

                    <TextView
                        android:id="@+id/tv_end_temp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_solidf5f5f5_corner12"
                        android:gravity="center"
                        android:paddingLeft="14dp"
                        android:paddingTop="4dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="4dp"
                        android:hint="结束温度"
                        android:textColorHint="#B2B1B6"
                        android:textColor="@color/color333333" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="bottom"
        android:background="@color/color1F4E99"
        android:gravity="center"
        android:text="启动"
        android:textColor="@color/white" />
</FrameLayout>