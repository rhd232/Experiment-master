<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_solidffffff_corner6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_channel_sel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:text="@string/setup_operation"
            android:textColor="@color/color686868" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="42dp">

            <TextView
                android:id="@+id/tv_mode1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:text="@string/setup_mode_dt"
                android:textColor="@color/color333333"
                android:drawableLeft="@drawable/selector_sel"/>
            <TextView
                android:id="@+id/tv_mode2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:text="@string/setup_mode_melting"
                android:layout_alignParentRight="true"
                android:textColor="@color/color333333"
                android:drawableLeft="@drawable/selector_sel"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="42dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="29dp"
            android:background="@drawable/shape_solid1f4e99_corner4"
            android:gravity="center"
            android:text="@string/dialog_btn_ok"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_dialog_close"
        android:layout_gravity="right"
       />
</FrameLayout>