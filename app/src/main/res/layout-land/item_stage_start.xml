<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <!-- android:layout_height="@dimen/stage_height"-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/colorCBCBCB" />

        <LinearLayout
            android:id="@+id/ll_stage_item"
            android:layout_width="@dimen/stage_width"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/colorA5B8D6"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/predenature_stage"
                android:textColor="@color/color333333"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorCBCBCB" />

            <View
                android:layout_width="match_parent"
                android:layout_height="90dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorCBCBCB" />

            <com.wind.base.widget.VernierDragLayout
                android:id="@+id/vernier_drag_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </com.wind.base.widget.VernierDragLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorCBCBCB" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/step_first"
                android:textColor="@color/color333333" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorCBCBCB" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_start_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_add" />

    <ImageView
        android:id="@+id/iv_start_del"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:scaleType="centerInside"
        android:src="@drawable/icon_minus" />
</FrameLayout>