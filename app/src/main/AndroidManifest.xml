<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jz.experiment">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-feature android:name="android.hardware.usb.host" />
    <!-- Needed only if your app targets Android 5.0 (API level 21) or higher. -->
    <uses-feature android:name="android.hardware.location.gps" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:name=".App"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ChartActivity">

        </activity>
        <activity
            android:name=".DefaultErrorActivity"
            android:label="app"
            android:process=":error_activity" />
        <activity android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|screenLayout|screenSize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|screenLayout|screenSize">

        </activity>

        <activity android:name=".module.login.LoginActivity"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|screenLayout|screenSize"/>
        <activity android:name=".module.settings.UserSettingsActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|screenLayout|screenSize"/>
        <activity android:name=".module.settings.EditPwdActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|screenLayout|screenSize"/>

        <activity android:name=".module.expe.activity.UserSettingsStep2Activity"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|screenLayout|screenSize"/>

        <activity android:name=".module.expe.activity.UserSettingsStep1Activity"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|screenLayout|screenSize"/>
        <activity android:name=".module.expe.activity.DeviceListActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|screenLayout|screenSize"/>
        <activity android:name=".module.expe.activity.ExpeRunningActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|screenLayout|screenSize"/>
        <activity android:name=".module.data.FilterActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|screenLayout|screenSize"
            ></activity>
        <service android:name="com.anitoa.service.BluetoothLeService"></service>
        <service android:name="com.anitoa.service.BluetoothService"></service>
        <service android:name="com.anitoa.service.UsbService">
        </service>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>